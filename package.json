{
  "name": "deskofy",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@10.0.0",
  "scripts": {
    "app:build": "turbo run app:build",
    "app:build:watch": "turbo run app:build:watch",
    "app:preload": "turbo run app:preload",
    "app:run": "turbo run app:run",
    "app:start": "turbo run app:start",
    "app:types": "turbo run app:types",
    "app:lint": "turbo run app:lint",
    "app:fmt": "turbo run app:fmt",
    "cli:build": "turbo run cli:build",
    "cli:build:watch": "turbo run cli:build:watch",
    "cli:types": "turbo run cli:types",
    "cli:lint": "turbo run cli:lint",
    "cli:fmt": "turbo run cli:fmt",
    "test:cli:01": "npx deskofy run tests/01/deskofy.config.json5",
    "core:build": "turbo run core:build",
    "core:build:watch": "turbo run core:build:watch",
    "core:types": "turbo run core:types",
    "core:lint": "turbo run core:lint",
    "core:fmt": "turbo run core:fmt",
    "core:npm:pack": "turbo run core:npm:pack",
    "core:npm:publish": "turbo run core:npm:publish",
    "react:build": "turbo run react:build",
    "react:build:watch": "turbo run react:build:watch",
    "react:types": "turbo run react:types",
    "react:lint": "turbo run react:lint",
    "react:fmt": "turbo run react:fmt",
    "react:npm:pack": "turbo run react:npm:pack",
    "react:npm:publish": "turbo run react:npm:publish",
    "config:build": "turbo run config:build",
    "config:build:watch": "turbo run config:build:watch",
    "config:types": "turbo run config:types",
    "config:lint": "turbo run config:lint",
    "config:fmt": "turbo run config:fmt",
    "all:lint": "npm run app:lint && npm run cli:lint && npm run core:lint && npm run react:lint && npm run config:lint"
  },
  "devDependencies": {
    "turbo": "2.5.8",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "eslint": "9.28.0",
    "prettier": "3.5.3",
    "typescript-eslint": "8.44.0",
    "typescript": "5.9.2"
  }
}
